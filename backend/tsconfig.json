{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./",  // Change to the root if index.ts is not inside src
  },
  "include": [
    "**/*.ts"  // Include all TypeScript files in the project
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
